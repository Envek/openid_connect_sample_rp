<section>
  <h2>
    <%= 'accounts.title'.t(name: @user_info.name) %>
  </h2>
  <article>
    <h3><%= 'user_info.title'.t %></h3>
    <pre><%= JSON.pretty_generate @user_info.as_json(skip_validation: true) %></pre>
    <% unless @user_info.valid? %>
      <dl>
        <dt><%= 'user_info.errors'.t %></dt>
        <% @user_info.errors.full_messages.each do |error| %>
          <dd><%= error %></dd>
        <% end %>
      </dl>
    <% end %>
  </article>
  <article>
    <h3><%= 'id_token.title'.t %></h3>
    <pre class="jwt"><%= @open_id.id_token %></pre>
    <pre><%= JSON.pretty_generate @open_id.check_session!.as_json %></pre>
  </article>
</section>

<aside>
  <%= link_to 'providers.index.title'.t, providers_path %>
</aside>