<article>
  <fieldset>
    <legend><%= 'provider.basic_info'.t %></legend>
    <% [:name, :identifier, :secret, :scope].each do |key| %>
      <%= f.label key %>
      <%= f.text_field key, placeholder: "provider.placeholder.#{key}".t %>
    <% end %>
  </fieldset>
  <fieldset class="protocol_endpoints">
    <legend><%= 'provider.protocol_endpoints'.t %></legend>
    <% [:authorization, :token, :check_id, :user_info].each do |key| %>
      <%= f.label key %>
      <%= f.url_field "#{key}_endpoint", placeholder: "https://client.example.com/#{key}" %>
    <% end %>
  </fieldset>
  <%= f.submit %>
</article>